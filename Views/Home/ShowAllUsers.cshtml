@model IEnumerable<IdentityUserNew>
@{
    Layout = "_SecondLayout";
}

<div class="row mt-5">
    <div class="col">
        <div>
            <div><a asp-action="Register" asp-controller="Account">Add a New User</a> </div>
            <div class="dropdown">
                <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Dropdown button
                </button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="#">Action</a></li>
                    <li><a class="dropdown-item" href="#">Another action</a></li>
                    <li><a class="dropdown-item" href="#">Something else here</a></li>
                </ul>
            </div>
            <table class="table table-bordered mt-3">

                <thead>
                    <tr>
                        <th>#</th>
                        <th>FirstName</th>
                        <th>LastName</th>
                        <th>Email</th>
                        <th>Action</th>

                    </tr>
                </thead>
                <tbody>
                    @{
                        var @a=0;
                        foreach (var i in Model)
                        {
                            a++;
                            <tr>
                                <td>@a</td>
                                <td>@i.FirstName</td>
                                <td>@i.LastName</td>
                                <td>@i.Email</td>
                                <td>
                                    <a class="btn btn-info" asp-action="EditUser" asp-controller="Home" asp-route-id="@i.Id">Edit User</a>
                                    <a class="btn btn-info" asp-action="AssignedRole" asp-controller="ManageRole" asp-route-id="@i.Id">Assign Role</a>

                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>