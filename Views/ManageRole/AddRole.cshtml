@{
    Layout = "_SecondLayout";
}

<html>
<head>
    <title>Create Role</title>
</head>
<body>
    <div class="row justify-content-center">
        <div class="col-md-6 mt-5">
            <div class="card">
                <div class="card-header text-center">
                    <h3>Add New Role</h3>
                </div>
                <div class="card-body">
                    <form class="needs-validation" novalidate asp-action="AddRole" asp-controller="ManageRole">
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <!-- Role Name Field -->
                        <div class="row mt-3">
                            <div class="col-md-12">
                                <label class="form-label">Role Name</label>
                                <input type="text" class="form-control" name="role" placeholder="Enter Role Name" required>
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <div class="row mt-4">
                            <div class="col-md-12 text-center">
                                <button class="btn btn-primary w-100" type="submit">Add Role</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
