@model IEnumerable<IdentityUserNew>
@{
    Layout = "_SecondLayout";
}
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <div class="align-content-center">
                    <table class="table table-bordered mt-5">
                        <thead>
                            <tr>
                                <th>Sr. No.</th>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Manage Role</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var a = 0;
                                foreach (var p in Model)
                                {
                                    a++;
                                    <tr>
                                        <td>@a</td>
                                        <td>@p.FirstName</td>
                                        <td>@p.LastName</td>
                                        <td>
                                            <a class="btn btn-info" asp-action="AssignedRole" asp-route-id="@p.Id">Manage Role</a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>


